{
  "name": "glitzy-native",
  "version": "0.3.2",
  "description": "A simple and fully customizable implementation of a skeleton placeholder for React Native",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "*.js",
    "*.d.ts"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx}",
    "lint": "eslint --fix src/**/*.{ts,tsx}",
    "prepare": "yarn build",
    "preversion": "yarn lint",
    "version": "yarn format && git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --no-watchman",
    "test:snapshot": "yarn test -u"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BalogunofAfrica/glitzy-native.git"
  },
  "keywords": [
    "node",
    "npm",
    "react-native",
    "shimmer",
    "skeleton",
    "placeholder",
    "skia",
    "expo",
    "gradient"
  ],
  "bugs": {
    "url": "https://github.com/BalogunofAfrica/glitzy-native/issues"
  },
  "homepage": "https://github.com/BalogunofAfrica/glitzy-native#readme",
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": ">=2.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@shopify/react-native-skia": "^1.7.5",
    "@types/bun": "latest",
    "@types/react": "^18.2.48",
    "expo-linear-gradient": "^14.0.1",
    "react": "^18.2.0",
    "react-native": "^0.76.5",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-reanimated": "^2.1.0",
    "typescript": "~5.0.0"
  },
  "author": "Abdulmumin Usman",
  "license": "MIT"
}
